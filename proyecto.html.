<script>
document.getElementById("year").textContent = new Date().getFullYear();

function openModal(id){ document.getElementById(id).style.display="flex"; }
function closeModal(id){ document.getElementById(id).style.display="none"; }

const galleries = {
  1:["img/proyecto1.jpg","img/proyecto1-2.jpg","img/proyecto1-3.jpg"],
  2:["img/proyecto2.jpg","img/proyecto2-2.jpg"],
  3:["img/proyecto3.jpg","img/proyecto3-2.jpg"],
  4:["img/proyecto4.jpg","img/proyecto4-2.jpg","img/proyecto4-3.jpg"]
};
const currentIndex={1:0,2:0,3:0,4:0};

function showImage(modalNum){ document.getElementById(`modal${modalNum}-img`).src = galleries[modalNum][currentIndex[modalNum]]; }
function nextImage(modalNum){ currentIndex[modalNum]=(currentIndex[modalNum]+1)%galleries[modalNum].length; showImage(modalNum); }
function prevImage(modalNum){ currentIndex[modalNum]=(currentIndex[modalNum]-1+galleries[modalNum].length)%galleries[modalNum].length; showImage(modalNum); }
</script>

